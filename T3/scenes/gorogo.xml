<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="500"/>                 
    <!--translation x="-1" y="1" z="0" /-->
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
  </INITIALS>


  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="0.3" g="0.3" b="0.3" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
  </ILLUMINATION>


  <!-- Lights -->
  <LIGHTS>    
   <LIGHT id="light0">                                    
    <enable value ="1" />                              
    <position  x="7.5" y="15" z="7.5" w="1" />           
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
    <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />                                        
    <specular r="0.9" g="0.9" b="0.9" a="1.0" />      
  </LIGHT>

  <LIGHT id="light1">                                    
    <enable value ="1" />                             
    <position x="7.5" y="15" z="-7.5" w="1" />            
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
    <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />                                           
    <specular r="0.9" g="0.9" b="0.9" a="1.0" />  
  </LIGHT>

  <LIGHT id="light2">                                   
    <enable value ="1" />                              
    <position x="-7.5" y="15" z="7.5" w="1" />                
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
    <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />                            
    <specular r="0.9" g="0.9" b="0.9" a="1.0" />     
  </LIGHT>

  <LIGHT id="light3">                                   
    <enable value ="1" />                          
    <position x="-7.5" y="15" z="-7.5"  w="0" />                 
    <ambient r="0.2" g="0.2" b="0.2" a="1.0" />             
    <diffuse r="0.9" g="0.9" b="0.9" a="1.0" />       
    <specular r="0.9" g="0.9" b="0.9" a="1.0" />      
  </LIGHT>
  
</LIGHTS>

<!-- Textures -->
<TEXTURES>

  <TEXTURE id="board">
    <file path="../textures/board.jpg" />                
    <amplif_factor s="1" t="1" />   
  </TEXTURE>

  <TEXTURE id="wood">
    <file path="../textures/wood.png" />                
    <amplif_factor s="1" t="1" />   
  </TEXTURE>

  <TEXTURE id="zero">
    <file path="../textures/0.png" />                
    <amplif_factor s="1" t="1" />   
  </TEXTURE>

</TEXTURES>

<MATERIALS>

  <!-- A default material -->
  <MATERIAL id="defaultMaterial">                                  
    <shininess value="1" />
    <specular r="0.0" g="0.0" b="0.0" a="1" />        
    <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
    <ambient r="0.4" g="0.4" b="0.4" a="1" />         
    <emission r="0.0" g="0.0" b="0.0" a="1" />        
  </MATERIAL>

  <!-- Black Material -->
  <MATERIAL id="blackMaterial">                                  
    <shininess value="0.3" />
    <specular r="0.1" g="0.1" b="0.1" a="0.5" />        
    <diffuse r="0" g="0" b="0" a="1" />       
    <ambient r="0" g="0" b="0" a="1" />         
    <emission r="0" g="0" b="0" a="1" />        
  </MATERIAL>

    <!-- White Material -->
  <MATERIAL id="whiteMaterial">                                  
    <shininess value="1" />
    <specular r="0.2" g="0.2" b="0.2" a="1" />        
    <diffuse r="0.5" g="0.5" b="0.5" a="1" />       
    <ambient r="0.2" g="0.2" b="0.2" a="1" />         
    <emission r="0" g="0" b="0" a="1" />        
  </MATERIAL>

</MATERIALS>


<ANIMATIONS>
</ANIMATIONS>

<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- THE NODES -->
<NODES>

  <ROOT id="root" />     

  <!-- The root node -->
  <NODE id="root" selectable="true">       
    <MATERIAL id="defaultMaterial" />         
    <TEXTURE id="null" />  

    <DESCENDANTS>
      <NODEREF id="board" />
      <NODEREF id="whiteBoard" />
      <NODEREF id="blackBoard" />
      <NODEREF id="scoreTable" />
      <NODEREF id="blackPiece" />
      <NODEREF id="whitePiece" />
      <NODEREF id="hengePiece" />
    </DESCENDANTS>
  </NODE>

<NODE id="blackPiece">
 <MATERIAL id="blackMaterial" />    
 <TEXTURE id="null" />  

    <TRANSLATION x="5" y="0.3" z="5"/>
<DESCENDANTS>
  <NODEREF id="pieceBody" />   
  <NODEREF id="pieceCover" />          
</DESCENDANTS>
</NODE>

<NODE id="whitePiece">
 <MATERIAL id="whiteMaterial" />    
 <TEXTURE id="null" />  

    <TRANSLATION x="2.5" y="0.3" z="2.5"/>
<DESCENDANTS>
  <NODEREF id="pieceBody" />   
  <NODEREF id="pieceCover" />          
</DESCENDANTS>
</NODE>

<NODE id="hengePiece">
 <MATERIAL id="whiteMaterial" />    
 <TEXTURE id="null" />  

    <TRANSLATION x="-2.5" y="0.3" z="5"/>
<DESCENDANTS>
  <NODEREF id="pieceBody" />   
  <NODEREF id="blackCover" />
  <NODEREF id="pieceCover" />
</DESCENDANTS>
</NODE>

<NODE id="pieceBody">
 <MATERIAL id="null" />    
 <TEXTURE id="null" />  

 <SCALE sx="0.9" sy="0.4" sz="0.9" />
 <ROTATION axis="x" angle="90" /> 

 <DESCENDANTS>
  <NODEREF id="cilindro" />          
</DESCENDANTS>
</NODE>

<NODE id="pieceCover">
 <MATERIAL id="null" />    
 <TEXTURE id="null" />  

 <SCALE sx="0.9" sy="0.2" sz="0.9" />
 <ROTATION axis="z" angle="-90" /> 

 <DESCENDANTS>
   <LEAF id="sphere1" type="sphere" args="1 20 20" />     
 </DESCENDANTS>
</NODE>

<NODE id="blackCover">
 <MATERIAL id="blackMaterial" />    
 <TEXTURE id="null" />  

 
 <SCALE sx="0.6" sy="0.25" sz="0.6" />
 <ROTATION axis="z" angle="-90" /> 

 <DESCENDANTS>
   <LEAF id="sphere1" type="sphere" args="1 20 20" />     
 </DESCENDANTS>
</NODE>

<NODE id="whiteBoard" >      
  <MATERIAL id="null" />    
  <TEXTURE id="wood" />            
  
  <TRANSLATION x="12" y="-1" z="9.5" />
  <SCALE sx="4" sy="1" sz="19" />

  <DESCENDANTS>
    <NODEREF id="cube" />
  </DESCENDANTS>
</NODE>

<NODE id="blackBoard" >      
  <MATERIAL id="null" />    
  <TEXTURE id="wood" />            
  
  <TRANSLATION x="-16" y="-1" z="9.5" />
  <SCALE sx="4" sy="1" sz="19" />

  <DESCENDANTS>
    <NODEREF id="cube" />
 </DESCENDANTS>
</NODE>

<NODE id="board" >      
  <MATERIAL id="null" />    
  <TEXTURE id="null" />            
  
  <TRANSLATION x="-7.5" y="-1" z="7.5" />
  
  <DESCENDANTS>
    <NODEREF id="topo" />
    <NODEREF id="base" />
 </DESCENDANTS>
</NODE>

<NODE id="base" >      
  <MATERIAL id="null" />    
  <TEXTURE id="wood" />            
       
  <TRANSLATION x="-2" y="0" z="2" />
  <SCALE sx="19" sy="1" sz="19" />

  <DESCENDANTS>
    <NODEREF id="cube" />
 </DESCENDANTS>
</NODE>

<NODE id="topo" >      
  <MATERIAL id="null" />    
  <TEXTURE id="board" />            

    <TRANSLATION x="15" y="0.005" z="0" />
    <SCALE sx="15" sy="1" sz="15" />
    <ROTATION axis="y" angle="90" />
  <DESCENDANTS>
    <NODEREF id="facecube5" />
 </DESCENDANTS>
</NODE>

<!-- Unitary Cylinder -->
<NODE id="cilindro">       
  <MATERIAL id="null" />
  <TEXTURE id="null" />                  
  
  <DESCENDANTS>
    <LEAF id="cylinder1" type="cylinder" args="1 1 1 20 20 1 1" />
  </DESCENDANTS>
</NODE>


<!-- Unitary Cube -->
<NODE id="cube">
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <DESCENDANTS>
   <NODEREF id="facecube1" />
   <NODEREF id="facecube2" />
   <NODEREF id="facecube3" />
   <NODEREF id="facecube4" />
   <NODEREF id="facecube5" />
   <NODEREF id="facecube6" /> 
 </DESCENDANTS>
</NODE>

<NODE id="folha0branca">
  <MATERIAL id="null" />     
  <TEXTURE id="zero" />             

  <TRANSLATION x="0.5" y="0.1" z="-0.9" />
  <SCALE sx="0.4" sy="1" sz="0.8" />
  <ROTATION axis="y" angle="180" />

  <DESCENDANTS>
   <NODEREF id="facecube5" />
 </DESCENDANTS>
</NODE>

<NODE id="folha0preta">
  <MATERIAL id="null" />     
  <TEXTURE id="zero" />             

  <TRANSLATION x="0.9" y="0.1" z="-0.9" />
  <SCALE sx="0.4" sy="1" sz="0.8" />
  <ROTATION axis="y" angle="180" />

  <DESCENDANTS>
   <NODEREF id="facecube5" />
 </DESCENDANTS>
</NODE>

<NODE id="scoreTable">
  <MATERIAL id="null" />
  <TEXTURE id="wood" />
  
  <TRANSLATION x="-7.5" y="0" z="-12" />
  <DESCENDANTS>
    <NODEREF id="face1" />
    <NODEREF id="face2" />
    <NODEREF id="face3" />
  </DESCENDANTS>
</NODE>


<NODE id="face1">       
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             
  
  <TRANSLATION x="0" y="0.3" z="-0.51" />
  <ROTATION axis="x" angle="65" />
  <SCALE sx="15" sy="0.6" sz="5" />

  <DESCENDANTS>
   <NODEREF id="cube" />
   <NODEREF id="folha0preta" />
   <NODEREF id="folha0branca" />
 </DESCENDANTS>
</NODE>

<NODE id="face2">       
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <TRANSLATION x="0" y="4.6" z="-1.99" />
  <ROTATION axis="x" angle="-65" />
  <SCALE sx="15" sy="0.6" sz="4.8" />

  <DESCENDANTS>
   <NODEREF id="cube" />
 </DESCENDANTS>
</NODE>

<NODE id="face3">       
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <SCALE sx="15" sy="0.6" sz="4.5" />

  <DESCENDANTS>
   <NODEREF id="cube" />
 </DESCENDANTS>
</NODE>

<!-- A cube face -->
<NODE id="facecube1">       
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <DESCENDANTS>
   <LEAF  type="rectangle" args="0 1 1 0" />        
 </DESCENDANTS>
</NODE>


<!-- Another cube face -->
<NODE id="facecube2">      
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <TRANSLATION x="0" y="0" z="-1" />
  <ROTATION axis="y" angle="-90" />

  <DESCENDANTS>
   <LEAF  type="rectangle" args="0 1 1 0" />        
 </DESCENDANTS>
</NODE>


<!-- Another cube face -->
<NODE id="facecube3">       
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <TRANSLATION x="1" y="0" z="0" />
  <ROTATION axis="y" angle="90" />

  <DESCENDANTS>
   <LEAF  type="rectangle" args="0 1 1 0" />        
 </DESCENDANTS>
</NODE>


<!-- Another cube face -->
<NODE id="facecube4">       
  <MATERIAL id="null" />    
  <TEXTURE id="null" />             

  <TRANSLATION x="1" y="0" z="-1" />
  <ROTATION axis="y" angle="180" />

  <DESCENDANTS>
   <LEAF  type="rectangle" args="0 1 1 0" />        
 </DESCENDANTS>
</NODE>


<!-- Another cube face -->
<NODE id="facecube5">       
  <MATERIAL id="null" />    
  <TEXTURE id="null" />             

  <TRANSLATION x="0" y="1" z="0" />
  <ROTATION axis="x" angle="-90" />

  <DESCENDANTS>
    <LEAF  type="rectangle" args="0 1 1 0" />        
  </DESCENDANTS>
</NODE>


<!-- Another cube face -->
<NODE id="facecube6">       
  <MATERIAL id="null" />     
  <TEXTURE id="null" />             

  <TRANSLATION x="0" y="0" z="-1" />
  <ROTATION axis="x" angle="90" />

  <DESCENDANTS>
   <LEAF  type="rectangle" args="0 1 1 0" />        
 </DESCENDANTS>
</NODE>
</NODES>

</SCENE>