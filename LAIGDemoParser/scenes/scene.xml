    <NODE id="costas">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />
		<TRANSLATION x="-5" y="0" z="0" />
        <SCALE sx="1.5" sy="4" sz="10" />
        <DESCENDANTS>
       		<NODEREF id="faceCubo1" />
