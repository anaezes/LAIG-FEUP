    <NODE id="assento">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			
        <SCALE sx="3.5" sy="1.5" sz="10" />
        <ROTATION axis="y" angle="90" />
        <DESCENDANTS>
       		<NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
