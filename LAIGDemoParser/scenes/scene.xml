<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.3" g="0.3" b="0.3" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>	
	<LIGHT id="light0">                                    
        <enable value ="1" />                   	       
        <position  x="10" y="10" z="15" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
	
	<LIGHT id="light1">                                    
        <enable value ="1" />                   	      
        <position x="11" y="11" z="11" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
	
	<LIGHT id="light2">                                   
        <enable value ="1" />                   	       
        <position x="14" y="10" z="14" w="1" />       		   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />               
        <amplif_factor s="2" t="2" />                           
    </TEXTURE>

     <!-- Tree leaves -->
    <TEXTURE id="folhas">
        <file path="images/leaves.jpg" />                
        <amplif_factor s="3" t="4" />                           
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="rocks">
        <file path="images/rocks.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
        <file path="images/vidral.jpg" />               
        <amplif_factor s="15" t="10" />                           
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
        <file path="images/bank.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>
    
</TEXTURES>


<MATERIALS>
	<!-- Pyramid material -->
    <MATERIAL id="piramideMaterial">                                  
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />        
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />        
        <ambient r="0.2" g="0.2" b="0.2" a="1" />         
        <emission r="0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree leaves material -->
	<MATERIAL id="leavesTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />        
        <diffuse r="0.0" g="0.207" b="0.0" a="1" />       
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree trunk material -->
	<MATERIAL id="trunkTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />      
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />       
    </MATERIAL>

    <!-- Lamp post material -->
    <MATERIAL id="lightPostMaterial">                                  
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.447" g="0.416" b="0.416" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">                                  
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="0.5" />       
        <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />        
        <emission r="0.5" g="0.5" b="0.5" a="1" />        
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS>

            <NODEREF id="luzes" />    
            <NODEREF id="chao" />
            <NODEREF id="paredes" />
            <NODEREF id="bancos" />
        </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="chao">      
        <MATERIAL id="null" />    
        <TEXTURE id="rocks" />       			

        <SCALE sx="25" sy="2" sz="25" />
        <ROTATION axis="y" angle="-90" />
        <ROTATION axis="x" angle="-90" />


        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 1 1 0" />        
				</DESCENDANTS>

    </NODE>

        <!-- The wall -->
    <NODE id="paredes">      
        <MATERIAL id="null" />      
        <TEXTURE id="clear" />                  
              
        <SCALE sx="25" sy="15" sz="25" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 1 1 0" />        
                </DESCENDANTS>

    </NODE>
    
    <!-- The lights -->
     <NODE id="luzes">       
        <MATERIAL id="lightMaterial" />    
        <TEXTURE id="clear" />      			

        <DESCENDANTS>
            <NODEREF id="luz1" />     	    
            <NODEREF id="luz2" />     	    
            <NODEREF id="luz3" />     	    	    
        </DESCENDANTS>

    </NODE>

    <!-- The first light -->
     <NODE id="luz1">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />     

         <TRANSLATION x="10" y="10" z="15" />  			

        <DESCENDANTS>
            <NODEREF id="luz_candeeiro" />  
        </DESCENDANTS>

    </NODE>

   <!-- The second light -->
    <NODE id="luz2">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="11" y="11" z="11" />

        <DESCENDANTS>
            <NODEREF id="luz_candeeiro" />   
        </DESCENDANTS>

    </NODE>

    <!-- The third light -->
    <NODE id="luz3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="14" y="10" z="14" />

        <DESCENDANTS>
           <NODEREF id="luz_candeeiro" />   
        </DESCENDANTS>

    </NODE>

    <!-- Lamp post -->
    <NODE id="luz_candeeiro">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <DESCENDANTS>
           <NODEREF id="luz_esfera" />       
           <NODEREF id="luz_suporte" /> 	   
        </DESCENDANTS>

    </NODE>

    <!-- Light bulb -->
    <NODE id="luz_esfera">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="0" y="0" z="0" />
        <SCALE sx="-1" sy="1" sz="1" />
        
        <DESCENDANTS>
						<LEAF id="sphere1" type="sphere" args="1.5 20 20" />

        </DESCENDANTS>

    </NODE>

    <!-- The post in the lamp post... -->
    <NODE id="luz_suporte">       
        <MATERIAL id="lightPostMaterial" />     
        <TEXTURE id="null" />       			

        <SCALE sx="0.08" sy="2.02" sz="0.08" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF id="cylinder1" type="cylinder" args="4 1 1 20 20" /> 
        </DESCENDANTS>

    </NODE>

    <!-- Street bench -->
    <NODE id="bancos">       
        <MATERIAL id="lightMaterial" />     
        <TEXTURE id="banco" />       			

        <DESCENDANTS>
       		<NODEREF id="banco1" />          
            <NODEREF id="banco2" />   		
        </DESCENDANTS>

    </NODE>

    <!-- One bench -->
    <NODE id="banco2">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="4" y="-2" z="4" />
        <ROTATION axis="y" angle="-90"/>
        
        <DESCENDANTS>
            <NODEREF id="banco" /> 
        </DESCENDANTS>

    </NODE>

    <!-- Another bench -->
     <NODE id="banco1">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />  

        <TRANSLATION x="14" y="-2" z="4" />
        <ROTATION axis="y" angle="-90"/> 
        
        <DESCENDANTS>
            <NODEREF id="banco" />      
        </DESCENDANTS>

    </NODE>
    
    <!-- Generic bench -->
    <NODE id="banco">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <ROTATION axis="y" angle="90" />
        <SCALE sx="0.5" sy="0.5" sz="1.5" />
        
        <DESCENDANTS>

       		<NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />      
        </DESCENDANTS>

    </NODE>

    <!-- A cube face -->
    <NODE id="faceCubo1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
     <NODE id="faceCubo2">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="2.5" />
		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="7.5" y="4" z="7.5" />
		<ROTATION axis="y" angle="90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
 					<LEAF  type="rectangle" args="0 4 5 0" />        
       </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

</NODES>

</SCENE>