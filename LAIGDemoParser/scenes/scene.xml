    <!-- Another bench -->
     <NODE id="sofa1">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 
        
        <TRANSLATION x="15" y="0" z="8" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
            <NODEREF id="assento" />
            <NODEREF id="costas" />
            <NODEREF id="bracos" />
